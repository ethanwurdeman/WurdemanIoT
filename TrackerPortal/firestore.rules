rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
    match /devices/{deviceId} {
      allow read: if true;
      allow write: if request.auth != null;

      match /points/{pointId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
    match /thermostats/{thermostatId} {
      allow read: if true;
      allow write: if request.auth != null;

      match /history/{historyId} {
        allow read: if true;
        allow write: if request.auth != null;
      }
    }
  }
}
